{
  "name": "llm-provider-mcp",
  "version": "2.0.0",
  "description": "Enhanced MCP server for querying multiple LLMs with streaming, caching, and comparison features",
  "main": "dist/index.js",
  "type": "module",
  "bin": {
    "llm-provider": "./dist/index.js"
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsx watch src/index.ts",
    "start": "node dist/index.js",
    "env-check": "npm run build && node dist/cli.js --env-check",
    "test": "jest",
    "test:watch": "jest --watch",
    "lint": "eslint src --ext .ts",
    "format": "prettier --write \"src/**/*.ts\"",
    "clean": "rm -rf dist",
    "prepublishOnly": "npm run clean && npm run build"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.17.3",
    "openai": "^4.73.0",
    "@anthropic-ai/sdk": "^0.32.1",
    "@google/generative-ai": "^0.21.0",
    "zod": "^3.24.1",
    "node-cache": "^5.1.2",
    "winston": "^3.17.0",
    "p-retry": "^6.2.1",
    "chalk": "^5.3.0"
  },
  "devDependencies": {
    "@types/node": "^22.10.2",
    "@types/jest": "^29.5.14",
    "typescript": "^5.7.2",
    "tsx": "^4.19.2",
    "jest": "^29.7.0",
    "ts-jest": "^29.2.5",
    "@typescript-eslint/eslint-plugin": "^8.19.0",
    "@typescript-eslint/parser": "^8.19.0",
    "eslint": "^9.17.0",
    "prettier": "^3.4.2"
  },
  "keywords": [
    "mcp",
    "llm",
    "ai",
    "openai",
    "anthropic",
    "claude",
    "gpt",
    "gemini",
    "perplexity"
  ],
  "author": "wnsgur1595",
  "license": "MIT",
  "engines": {
    "node": ">=20.0.0"
  },
  "files": [
    "dist/**/*",
    "README.md",
    "LICENSE"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/wnsgur1595/llm-provider.git"
  },
  "homepage": "https://github.com/wnsgur1595/llm-provider#readme",
  "bugs": {
    "url": "https://github.com/wnsgur1595/llm-provider/issues"
  }
}